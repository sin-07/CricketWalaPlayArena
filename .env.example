# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cricketbox

# Razorpay Configuration (REQUIRED FOR PAYMENTS)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Email Configuration (Gmail or Custom SMTP)
# For Gmail: Use App Password (2FA enabled account)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# OR Custom SMTP Configuration
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false

# SMS Configuration - Choose one provider
SMS_PROVIDER=twilio  # Options: twilio, aws-sns, exotel

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# AWS SNS Configuration
AWS_SNS_API_KEY=your_aws_sns_api_key

# Exotel Configuration
EXOTEL_SID=your_exotel_sid
EXOTEL_TOKEN=your_exotel_token
EXOTEL_FROM_NUMBER=9999999999

# Frontend Public Key (Only the public key, never the secret)
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id
# Cloudinary Configuration (For Image Uploads)
# Sign up at https://cloudinary.com (Free tier: 25GB storage, 25GB bandwidth/month)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret